<h1>Locations</h1>

<% if @bool == 1 %>
    <h2>Searches: </h2>
        <% @location.each do |l| %>
            <p>
                <strong>Building: </strong> <%= l.name %>
            </p>
            <p>
                <strong>Floor: </strong> <%= l.floor %>
            </p>
            <p>
                <strong>Room: </strong> <%= l.roomNumber %>
            </p>
            <p>
                <strong>Description: </strong> <%= l.description %>
            </p>
        <% end %>
<% else %>
    <h2>Woodward</h2>
    <br />
        <% @l1.each do |location| %>
            <strong>Floor: </strong> <%= location.floor %>
            <strong>Room Number: </strong> <%= location.roomNumber %>
            <strong>Description: </strong> <%= location.description %>
            <%= link_to "Show", location_path(location) %>
            <br />
        <% end %>
        <br />
        
